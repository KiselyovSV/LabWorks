@model Grad_WebApp.Models.Timetable_Client

@{
    ViewData["Title"] = "Изменить запись на тренировку";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1></h1>

<h4>Изменить запись на тренировку</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TimetableId" class="control-label"></label>
                <select asp-for="TimetableId" class="form-control" asp-items="ViewBag.TimetableId"></select>
                <span asp-validation-for="TimetableId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="СlientId" class="control-label"></label>
                <select asp-for="СlientId" class="form-control" asp-items="ViewBag.СlientId"></select>
                <span asp-validation-for="СlientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@idService.Client_Id">К списку записей</a>
</div>

